- model_class = Appointment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @appointment.date
%p
  %strong= model_class.human_attribute_name(:time) + ':'
  %br
  = @appointment.time
%p
  %strong= model_class.human_attribute_name(:place) + ':'
  %br
  = @appointment.place
%p
  %strong= model_class.human_attribute_name(:customer_id) + ':'
  %br
  = link_to @appointment.customer.fullname,customer_path(@appointment.customer)


= link_to t('.back', :default => t("helpers.links.back")), appointments_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_appointment_path(@appointment), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), appointment_path(@appointment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
