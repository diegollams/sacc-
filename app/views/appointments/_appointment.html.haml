%li.clearfix
  .chat-body.clearfix
    .header
      = link_to appointment.customer.fullname, appointment.customer
      %small.pull-right.text-muted
        %i.fa.fa-clock-o.fa-fw
        = time_distance_to_now appointment
    %p
      = t "appointments.you_will_see", date: ((appointment.date - Date.today).days == 0 ? t('appointments.today') : t('appointments.on') + ' ' + appointment.date.to_s), time: l(appointment.time, format: :human_time), in: t('appointments.in'), place: appointment.place