= simple_form_for @quotation, :html => { :class => 'form-horizontal' } do |f|
  = f.input :customer_id, input_html: {value: @customer.id},as: :hidden
  = f.input :square_meters
  = f.input :unit_price
  = f.input :counteroffer,placeholder: t('quotations.form.counteroffer_input')
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), request.referrer, :class => 'btn btn-default'
