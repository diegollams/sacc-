- model_class = Offer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @offer.name
%p
  %strong= model_class.human_attribute_name(:expiration) + ':'
  %br
  = @offer.expiration
%p
  %strong= model_class.human_attribute_name(:percentage) + ':'
  %br
  = @offer.percentage
%p
  %strong= model_class.human_attribute_name(:observations) + ':'
  %br
  = @offer.observations


= link_to t('.back', :default => t("helpers.links.back")), request.referrer, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_offer_path(@offer), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), offer_path(@offer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
