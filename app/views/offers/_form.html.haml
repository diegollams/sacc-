= simple_form_for @offer, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :expiration
  = f.error_span :expiration
  = f.input :percentage
  = f.error_span :percentage
  = f.input :observations
  = f.error_span :observations
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), request.referrer, :class => 'btn btn-default'
