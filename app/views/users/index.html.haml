- model_class = User
.page-header
  %h1
    =t '.title', default: model_class.header_name
    = link_to new_user_path, class: 'btn btn-primary pull-right' do
      %span{class: 'fa fa-star'}
      = t('.new', default: t("helpers.links.new"))
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:email)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.phone
        %td= user.email
        %td
          = link_to t('.show', default: t("helpers.links.show")), user_path(user), class: 'btn btn-primary btn-xs'
          = link_to t('.edit', default: t("helpers.links.edit")), edit_user_path(user), class: 'btn btn-default btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), user_path(user), :method => :delete, :data => { :confirm => t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

