- model_class = Interaction
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:kind) + ':'
  %br
  = @interaction.kind
%p
  %strong= model_class.human_attribute_name(:observation) + ':'
  %br
  = @interaction.observation
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @interaction.date
%p
  %strong= model_class.human_attribute_name(:customer) + ':'
  %br
  = link_to @interaction.customer.fullname,customer_path(@interaction.customer)
%p
  %strong= model_class.human_attribute_name(:time) + ':'
  %br
  = @interaction.time


= link_to t('.back', :default => t("helpers.links.back")), interactions_path(customer_id: @interaction.customer_id), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_interaction_path(@interaction), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), interaction_path(@interaction), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
