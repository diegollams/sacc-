- model_class = Lot
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @lot.number
%p
  %strong= model_class.human_attribute_name(:block) + ':'
  %br
  = @lot.block
%p
  %strong= model_class.human_attribute_name(:stage) + ':'
  %br
  = @lot.stage
%p
  %strong= model_class.human_attribute_name(:area) + ':'
  %br
  = @lot.area
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @lot.status
%p
  %strong= model_class.human_attribute_name(:perimeter_points) + ':'
  %br
  = @lot.perimeter_points
%p
  %strong= model_class.human_attribute_name(:perimeter_lengths) + ':'
  %br
  = @lot.perimeter_lengths
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @lot.active


= link_to t('.back', :default => t("helpers.links.back")), lots_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_lot_path(@lot), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), lot_path(@lot), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
