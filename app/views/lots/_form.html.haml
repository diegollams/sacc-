= form_for @lot do |f|
  - if @lot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lot.errors.count, "error")} prohibited this lot from being saved:"
      %ul
        - @lot.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :block
    = f.text_field :block
  .field
    = f.label :stage
    = f.text_field :stage
  .field
    = f.label :area
    = f.text_field :area
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :salesman_id
    = f.text_field :salesman_id
  .field
    = f.label :perimeter_points
    = f.text_field :perimeter_points
  .field
    = f.label :perimeter_lengths
    = f.text_field :perimeter_lengths
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
