.page-header
  %h1 Dashboard
.col-xs-12
  .row
    %ul.nav.nav-tabs{role: :tablist}
      %li.active{role: :presentation}
        = link_to((t 'appointments.today'), '#today', role: 'tab', aria: {controls: :home}, data: {toggle: :tab})
      %li{role: :presentation}
        = link_to((t 'appointments.upcoming'), '#upcoming', role: 'tab', aria: {controls: :profile}, data: {toggle: :tab})
      %li{role: :presentation}
        = link_to((t 'appointments.past'), '#past', role: 'tab', aria: {controls: :messages}, data: {toggle: :tab})
      %li{role: :presentation}
        = link_to((t 'appointments.all'), '#all', role: 'tab', aria: {controls: :messages}, data: {toggle: :tab})
    .tab-content
